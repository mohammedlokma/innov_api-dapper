@model innov_web.Models.DTO.ParamterCreateDto
@{

    var data = (int) ViewData["numOfParamters"];
}    
<form asp-action="CreateAll">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Add Paramters</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for (var i = 0; i <= data; i++) {
                <div class="col-2">
                    <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                 
                }
            

                <div class="col-5">
                    <input type="submit" value="Create" class="btn btn-success form-control" />
                </div>
                </div>
                </div>
                </form>

